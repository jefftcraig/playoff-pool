<% provide(:title, "#{@league.name} Skater Scoreboard") %>
<h1><%= @league.name %> // Skater Standings</h1>
<div class="league-links">
  <%= link_to "Back to League", @league, class: 'btn btn-success btn-sm btn-custom' %>
</div>
<%= render 'player_filter', league: @league %>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Team</th>
      <th>POS</th>
      <th>Round</th>
      <th>G</th>
      <th>A</th>
      <th>P</th>
      <th>OTG</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% if @skaters %>
      <% i = 1 %>
      <% @skaters.each do |skater| %>
        <tr>
          <td><%= i %></td>
          <td><%= skater.full_name %></td>
          <td><%= skater.team %></td>
          <td><%= skater.position %></td>
          <td><%= skater.round %></td>
          <td><%= skater.goals %></td>
          <td><%= skater.assists %></td>
          <td><%= skater.points %></td>
          <td><%= skater.ot_goals %></td>
          <td><%= skater.round_total %></td>
        </tr>
        <% i += 1 %>
      <% end %>
    <% end %>
  </tbody>
</table>
