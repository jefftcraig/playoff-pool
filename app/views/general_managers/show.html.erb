<div class="page-heading" data-h="asdf">
  <h1><%= @gm.name %> Roster</h1>
  <div class="row">
    <% if current_user == @gm.user %>
      <div class="col-md-2">
        <%= link_to "Change Name", edit_user_general_manager_path(@gm) %>
      </div>
    <% end %>
    <div class="col-md-2"><%= link_to "Back To League", league_path(@gm.league) %></div>
  </div>
</div>

<section>
  <ul class="nav nav-tabs" role="tablist" id="roundTab">
    <li class="nav-item" data-tab="round-one">
      <a class="nav-link round-one <%= "#{@r1}" %>">Round 1</a>
    </li>
    <li class="nav-item" data-tab="round-two">
      <a class="nav-link round-two <%= "#{@r2}" %>">Round 2</a>
    </li>
    <li class="nav-item" data-tab="round-three">
      <a class="nav-link round-three <%= "#{@r3}" %>">Round 3</a>
    </li>
    <li class="nav-item" data-tab="round-four">
      <a class="nav-link round-four <%= "#{@r4}" %>">Round 4</a>
    </li>
  </ul>
</section>

<section>
  <div id="roster-container">
    <%= render 'roster_container' %>
  </div>
</section>
